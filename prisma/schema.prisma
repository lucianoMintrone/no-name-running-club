generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("PRISMA_DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

enum Season {
  winter
  summer
}

enum FeedbackCategory {
  bug
  idea
  question
}

enum FeedbackLinearStatus {
  pending
  created
  failed
}

model User {
  id             String          @id @default(cuid())
  email          String          @unique
  emailVerified  DateTime?
  name           String?
  image          String?
  role           String          @default("member") // "member" | "admin"
  units          String          @default("imperial")
  zipCode        String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  accounts       Account[]
  sessions       Session[]
  userChallenges UserChallenge[]
  feedbacks      Feedback[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Challenge {
  id              String          @id @default(cuid())
  current         Boolean         @default(false)
  season          Season
  year            String
  daysCount       Int             @default(30)
  stravaUrl       String?
  stravaEmbedCode String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  userChallenges  UserChallenge[]

  @@unique([season, year])
}

model UserChallenge {
  id          String   @id @default(cuid())
  userId      String
  challengeId String
  daysCount   Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  challenge Challenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)
  runs      Run[]

  @@unique([userId, challengeId])
}

model Run {
  id                String   @id @default(cuid())
  userChallengeId   String
  date              DateTime @db.Date
  durationInMinutes Int?
  distance          Float?
  units             String?
  temperature       Int?
  position          Int
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  userChallenge UserChallenge @relation(fields: [userChallengeId], references: [id], onDelete: Cascade)
}

model Feedback {
  id             String              @id @default(cuid())
  createdAt      DateTime            @default(now())
  userId         String
  category       FeedbackCategory
  message        String              @db.Text
  pagePath       String?
  userAgent      String?
  linearIssueId  String?
  linearIssueUrl String?
  linearStatus   FeedbackLinearStatus @default(pending)
  linearError    String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([userId])
  @@index([linearStatus])
  @@index([category])
}
